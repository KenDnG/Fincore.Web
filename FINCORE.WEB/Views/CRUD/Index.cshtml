@{
    ViewData["Title"] = "TEST CRUD JQuery Ajax";
}

<!-- DATA NASABAH -->
<div class="container">
    <form id="contactform" mmethod="post">
        <h4 style="font-family: 'arial', Times, serif;"><div class="bgc-menu">TEST CRUD with JQUERY AJAX</div></h4>
        <div class="data-input">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <!-- START FORM INPUT TEST CRUD -->
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="tile" style="height: 550px;">
                        <div class="form-group row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p>Kode Cabang</p>
                                <input class="form-control" id="txtkodecabang" placeholder="Kode Cabang" required>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p>PO No</p>
                                <input class="form-control" id="txtpono" placeholder="PO No" required>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p>Tipe Konsumen</p>
                                <input class="form-control" id="txttipekonsumen" placeholder="Tipe Konsumen" required>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p>Existing Customer RO</p>
                                <input class="form-control" id="txtexistingcustomer" placeholder="Existing Customer RO" required>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p>Nama Nasabah</p>
                                <input class="form-control" id="txtnamanasabah" placeholder="Nama Nasabah" required>
                            </div>
                        </div>
                    </div>
                    <button id="btnsave_crud" type="submit" class="btn-submit ladda-button" style="width: 25%; margin-bottom:50%" data-style="expand-left"><span class="ladda-label">Save</span></button>
                    <button id="btnupdate_crud" type="submit" class="btn-submit" data-toggle="tab" style="width: 25%; margin-bottom:50%">Update</button>
                </div>
                <!-- END FORM INPUT TEST CRUD -->
                <!-- START LIST DATA TABLE -->
                <div class="col-lg-8">
                    <div class="tile" style="height: 550px;">
                        <div class="form-group row">
                            <table class="table table-striped table-bordered" style="width:100%; font-size: 9px;" id="tbl">
                                <thead>
                                    <tr style="background-color: #ffd951; color: #000;">
                                        <th>PO No</th>
                                        <th>Kode Cabang</th>
                                        <th>Nama Nasabah</th>
                                        <th>Tipe Konsumen</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- END LIST DATA TABLE -->


            </div>
        </div>
    </form>
</div>
<!-- END DATA NASABAH -->

<script src="~/Scripts/crud.js"></script>