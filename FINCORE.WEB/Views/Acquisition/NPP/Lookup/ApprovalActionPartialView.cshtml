@using FINCORE.WEB.Helpers
@{
    ViewData["Title"] = "NPP Approval Popup";
}
<div class="top-content" id="LookupModal">
	<div class="container">
		<div class="form-group row">
			<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
				<p>Keputusan</p>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
				<select class="form-control" id="DDownReason" name="ReasonDescription" required="required" name="Type" style="width:500px;">
					<option value="">Pilih Keputusan</option>

					@foreach (var item in Model.DataApproval)
					{
						<option value="@item.ReasonId">@item.ReasonDescription</option>
					}
				</select>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
				<p>Alasan</p>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
				<div>
					<textarea class="form-control" id="TxtReasonDesc" name="ReasonDescription" style="width:500px;" />
				</div>

			</div>
		</div>

		
		<input type="hidden" id="txtStatusApproval"/>


		<div class="form-group row">
			<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
				<div>
						<button class="btn-submit" id="btnApprovalProcess" style="width: 100%;" onclick="ChooseReasonApproval(this)">Proses</button>
				</div>
			</div>
		</div>
	</div>
</div>